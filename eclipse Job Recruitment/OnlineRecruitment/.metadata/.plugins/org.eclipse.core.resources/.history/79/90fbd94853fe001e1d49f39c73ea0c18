package com.example.OnlineRecruitment.Controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.example.OnlineRecruitment.Entities.Graduate;
import com.example.OnlineRecruitment.Services.GraduateServices;

@RestController
public class GraduateController {
	
	@Autowired
	private GraduateServices graduateServices;
	
	@GetMapping("/save")
	public String saveGraduate() {
		Graduate graduate = new Graduate();
		graduate.setEmail("sohankalburgi2004@gmail.com");
		graduate.setName("sohan");
		graduate.setPassword("205456");
		graduate.setLanguages(new String []{"kannada","English","Marathi"});
		graduate.setPhone("8000123123");
		graduateServices.saveGraduate(graduate);
		return "saved";
	}
	
	
}
